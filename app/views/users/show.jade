.page-header
  h1 Details of user

div(about=path_to.user(user))
  .field(property='name')= user.name
  .field(property='star')= user.star
  .field(property='createdAt')= date_format(user.createdAt)
  .field(property='image')
    .thumb(style="width:100px; height:100px; background: url(#{user.image}) no-repeat center; background-size: cover;" )

.actions
  != link_to('Edit', path_to.edit_user(user), {class: 'btn primary'}) + ' '
  != link_to('Delete', path_to.user(user), {class: 'btn danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'})
